<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>Login Box HTML Code - www.PSDGraphics.com</title>
<link href="login-box.css" rel="stylesheets" type="text/css" />
</head>

<body>
<center>
	<b>Login para administradores</b> 
	<br/>
	<br/>
<div id="login-box">
	<% if flash[:notice] %>
		<span style="color:red;"> <%= flash[:notice] %></span>
	<% end %>
	<%= form_tag :login_admin, :method => 'POST' do %>
		<div align="vertical-align: right"  >Usuario:	
		<input name="email" class="form-login" align="vertical-align: left" title="Username" value="" size="10" maxlength="2048" /> @<%= select("university", "id", University.all.collect {|r| [ r.email, r.id ] }) %></div>
		<br/>							
		<div align="right">Contraseña:
		<input name="password" align="left" type="password" class="form-login" title="Password" value="" size="17" maxlength="2048" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
		<br />
		<input name="btnEntrar" value="" type="hidden" />
		<center>
			<button type="submit" alt="Enviar" onclick="btnEntrar.value = 'submit'">Iniciar Sesión</button>
		</center>
	<% end %> 
</div></center>
</body>
</html>

